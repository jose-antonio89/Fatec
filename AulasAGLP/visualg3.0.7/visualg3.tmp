Var

   //3)Escreva um algoritmo que leia 8 números inteiros
   //em um vetor e exiba quantos deles são pares.

   i : inteiro
   numero : vetor[1..8] de inteiro
   par : vetor[1..8] de inteiro
   qtd : inteiro

Inicio

   Escreval("Digite 8 números para sabe quais são pares")

   Para i de 1 ate 8 faca
      Escreval(i ," número")
      Leia(numero[i])

      Se numero[i]%2 = 0 entao//2% Verifica se o numero é par
         par[i] <- numero[i]
      Fimse

      se numero[i] = par[i] entao
         qtd <- qtd + 1
      fimse
   Fimpara

   Escreval("Voce digitou", qtd, " números pares")

   Para i de 1 ate 8 faca
      Se par[i] <> 0 então
         Escreval("")
         Escreval(par[i])
      Fimse
   Fimpara
Fimalgoritmo